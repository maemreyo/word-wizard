{
  "name": "chrome-extension-starter",
  "displayName": "Chrome Extension Starter - Clean Architecture",
  "version": "1.0.0",
  "description": "A Chrome extension starter with clean architecture patterns, TypeScript, React, and best practices",
  "author": "Chrome Extension Team",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "setup": "node scripts/setup.js",
    "configure": "node scripts/configure.js",
    "dev-menu": "node scripts/dev-workflow.js",
    "deploy": "node scripts/deploy.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "clean": "rm -rf build dist .plasmo node_modules/.cache",
    "reinstall": "npm run clean && npm install",
    "validate": "npm run typecheck && npm run lint && npm run test:ci",
    "prepare": "husky install || true",
    "release": "semantic-release"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.9",
    "@plasmohq/storage": "^1.9.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "ai": "^3.1.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "jwt-decode": "^4.0.0",
    "ky": "^1.2.3",
    "lucide-react": "^0.535.0",
    "marked": "^12.0.2",
    "openai": "^4.47.1",
    "plasmo": "^0.88.0",
    "prismjs": "^1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "stripe": "^14.25.0",
    "uuid": "^9.0.1",
    "zod": "^4.0.14",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "0.0.258",
    "@types/jest": "^30.0.0",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "contextMenus",
      "sidePanel",
      "tabs"
    ],
    "commands": {
      "main-action": {
        "suggested_key": {
          "default": "Alt+Shift+E"
        },
        "description": "Execute main extension action"
      }
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "options_page": "options.html"
  }
}
